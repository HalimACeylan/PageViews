<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Welcome Home Page"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnThingsMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Things to Know" />

            <Button
                android:id="@+id/btnBuyMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy Waste" />

            <Button
                android:id="@+id/btnSellMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sell Waste" />

            <Button
                android:id="@+id/btnAboutMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About" />

            <Button
                android:id="@+id/btnDistanceMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="closest distance " />
        </LinearLayout>

    </LinearLayout>